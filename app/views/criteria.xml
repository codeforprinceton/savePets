<Alloy>
	<Window id="genericWin" title="Pet Search" modal="true" onOpen="focusTextField">
		<TableView>
			<TableViewRow id = "dogrow" height="100dp">
				<View width="20%" left="5%">
					<Label text="Dogs" width="100%" />
				</View>
				<View width="30%" left="20%">
					<Switch onChange="changepickerDog" />
					<Switch class="titles" platform="android,mobileweb" />
					<Switch class="checkbox" platform="android" />
				</View>
				<View id = "dogbreedrow" width="50%" left="50%" visible="false">
					<Picker id = "dogbreedpicker"></Picker>
				</View>
			</TableViewRow>
			<TableViewRow id = "catrow" height="100dp">
				<View width="20%" left="5%">
					<Label text="Cats" width="100%" />
				</View>
				<View width="30%" left="20%">
					<Switch onChange="changepickerCat" />
					<Switch class="titles" platform="android,mobileweb" />
					<Switch class="checkbox" platform="android" />
				</View>
				<View id = "catbreedrow" width="50%" left="50%" visible="false">
					<Picker id = "catbreedpicker"></Picker>
				</View>
			</TableViewRow>
			<TableViewRow>
				<Button class="button" onClick="openMaster">Search</Button>
			</TableViewRow>
		</TableView>
	</Window>
</Alloy>